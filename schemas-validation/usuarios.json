{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Usuarios",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "correo"
  },
  "properties": {
    "nombre": { "type": "string" },
    "correo": { "type": "string", "format": "email" },
    "contrasena": { "type": "string", "minLength": 6 },
    "role": { "type": "string", "enum": ["Cliente", "Gerente", "Admin"] },
    "informacion_bancaria": {
      "type": "object",
      "properties": {
        "numero_tarjeta": { "type": "string", "pattern": "^[0-9]{13,19}$" },
        "cvv": { "type": "string", "pattern": "^[0-9]{3,4}$" },
        "fecha_vencimiento": { "type": "string", "pattern": "^(0[1-9]|1[0-2])/[0-9]{2}$" },
        "direccion_delivery": { "type": "string" }
      },
      "required": ["numero_tarjeta", "cvv", "fecha_vencimiento", "direccion_delivery"],
      "additionalProperties": false
    },
    "historial_pedidos": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": ["nombre", "correo", "contrasena", "role"],
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pedidos",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "local_id",
    "sort_key": "pedido_id"
  },
  "properties": {
    "local_id": { "type": "string" },
    "pedido_id": { "type": "string" },
    "usuario_id": { "type": "string" },
    "productos_ids": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "cocinero_dni": { "type": "string" },
    "despachador_dni": { "type": "string" },
    "repartidor_dni": { "type": "string" },
    "costo": { "type": "number", "minimum": 0 },
    "fecha_entrega": { "type": "string", "format": "date-time" },
    "direccion": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["eligiendo", "cocinando", "empacando", "enviando", "recibido"]
    }
  },
  "required": ["local_id", "pedido_id", "usuario_id", "cocinero_dni", "despachador_dni", "repartidor_dni", "productos_ids", "costo", "status"],
  "additionalProperties": false
}

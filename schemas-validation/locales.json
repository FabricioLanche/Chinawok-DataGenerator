{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Locales",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "local_id"
  },
  "properties": {
    "local_id": { "type": "string" },
    "direccion": { "type": "string" },
    "telefono": {
      "type": "string",
      "pattern": "^[0-9\\-\\s\\+]{6,20}$"
    },
    "hora_apertura": {
      "type": "string",
      "pattern": "^(?:[01]\\d|2[0-3]):[0-5]\\d$"
    },
    "hora_finalizacion": {
      "type": "string",
      "pattern": "^(?:[01]\\d|2[0-3]):[0-5]\\d$"
    }
  },
  "required": ["local_id", "direccion", "hora_apertura", "hora_finalizacion"],
  "additionalProperties": false
}
